/ Sign In Popup
#sign-in-dialog.zoom-anim-dialog.mfp-hide
  .small-dialog-header
    %h3 Sign In
  %form
    .sign-in-wrapper
      %a.social_bt.facebook{:href => "#0"} Login with Facebook
      %a.social_bt.google{:href => "#0"} Login with Google
      .divider
        %span Or
      .form-group
        %label Email
        %input#email.form-control{:name => "email", :type => "email"}/
        %i.icon_mail_alt
      .form-group
        %label Password
        %input#password.form-control{:name => "password", :type => "password", :value => ""}/
        %i.icon_lock_alt
      .clearfix.add_bottom_15
        .checkboxes.float-left
          %label.container_check
            Remember me
            %input{:type => "checkbox"}/
            %span.checkmark
        .float-right.mt-1
          %a#forgot{:href => "javascript:void(0);"} Forgot Password?
      .text-center
        %input.btn_1.full-width{:type => "submit", :value => "Log In"}/
      .text-center
        Donâ€™t have an account?
        %a{:href => "register.html"} Sign up
      #forgot_pw
        .form-group
          %label Please confirm login email below
          %input#email_forgot.form-control{:name => "email_forgot", :type => "email", :required => true}/
          %i.icon_mail_alt
        %p You will receive an email containing a link allowing you to reset your password to a new preferred one.
        .text-center
          %input.btn_1{:type => "submit", :value => "Reset Password"}/
