#contribution{"aria-labelledby" => "contribution-tab", :role => "tabpanel"}
  .row
    .col-md-8
      .form-content-wrap
        %h2 
          = t('experiences.edit_page.step_20.heading')
        %p 
          = t('experiences.edit_page.step_20.paragraph')

        = render partial: 'experiences/steps/step_count', locals: { f: f, step: 21 }
        .form-group
          = f.text_area :guest_money_benefits, placeholder: t('experiences.edit_page.step_20.placeholder'), maxlength: '150', style: 'height: 123px;', class: 'form-control'
        .form-group
          = f.submit t('common.save_and_continue'), class: 'btn next-stpe-btn'
    .col-md-4
      .side-img
        %img{:src => "/assets/side-13.jpg"}/
