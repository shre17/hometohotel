            /   %p 
            /     = t('experiences.edit_page.step_17.paragraph_3')
            /   .check-box-wrapper
            /     %label.check-box
            /       = t('experiences.edit_page.step_17.label_8')
            /       %a{:href => ""} 
            /         = t('experiences.edit_page.step_17.link')
            /       - if f.object.booker_to_verify_id
            /         = f.check_box :booker_to_verify_id, checked: 'checked'
            /       - else
            /         = f.check_box :booker_to_verify_id
            /       %span.checkmark
            .form-group
              = f.submit t('common.save_and_continue'), class: 'btn next-stpe-btn'
    .col-md-4
      .side-img
        %img{:src => "/assets/side-13.jpg"}/
