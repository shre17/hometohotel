#guest-requirements{"aria-labelledby" => "guest-requirements-tab", :role => "tabpanel"}
  .row
    .col-md-8
      .form-content-wrap
        %h2 
          = t('experiences.edit_page.step_17.heading')
        %p 
          = t('experiences.edit_page.step_17.paragraph_1')
        = render partial: 'experiences/steps/step_count', locals: { f: f, step: 18 }
        .form-group
          %label.big-label 
            = t('experiences.edit_page.step_17.label_1')
          .check-box-wrapper
            %label.check-box
              = t('experiences.edit_page.step_17.label_2')
              %input{:checked => "checked", :type => "checkbox"}
                %span.checkmark
          .form-group
            %label.big-label 
              = t('experiences.edit_page.step_17.label_3')
            %p 
              = t('experiences.edit_page.step_17.paragraph_2')
            = f.select :min_age, options_for_select((2..18).map{ |i| i }, f.object.min_age), {}, class: 'form-control'
            
            .check-box-wrapper
              %label.check-box
                = t('experiences.edit_page.step_17.label_4')
                - if f.object.can_bring_kids_under_2_years
                  = f.check_box :can_bring_kids_under_2_years, checked: 'checked'
                - else
                  = f.check_box :can_bring_kids_under_2_years
                %span.checkmark

            .form-group
              %label.big-label 
                = t('experiences.edit_page.step_17.label_5')
              .select-option-radio
                - Experience::YOUR_EXPERIENCE.invert.to_a.map do |key, value|
                  %label.radio-check-box
                    = t('experiences.edit_page.step_17.key', key: key)
                    = f.radio_button :how_active_is_your_experience, value, :required => true
                    %span.checkmark
            .form-group
              %label.big-label 
                = t('experiences.edit_page.step_17.label_6')
              = f.text_area :additional_requirement, maxlength: '150', style: 'height: 123px;', class: 'form-control'

