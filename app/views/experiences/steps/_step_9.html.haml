#what-we-do{"aria-labelledby" => "what-we-do-tab", :role => "tabpanel"}
  .row
    .col-md-8
      .form-content-wrap
        %h2 
          = t('experiences.edit_page.step_10.heading')
        %p 
          = t('experiences.edit_page.step_10.paragraph')
        %p
          %a{:href => "#"}
            %i.fa.fa-lightbulb-o>
            = t('common.tips_and_examples_link')
        = render partial: 'experiences/steps/step_count', locals: { f: f, step: 11 }
        .form-group
          = f.text_area :what_you_will_do, class: 'form-control', minlength: 100, maxlength: 150, style: 'height: 123px;', :required => true
          %span#rchars 150
          = t('common.character_s_remaining')
        .form-group
          = f.submit t('common.next_button'), class: 'btn next-stpe-btn'
    .col-md-4
      .side-img
        %img{:src => "/assets/side-10.jpg"}/